<div class="row" id="form">
  <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4">
    <%= form_for  @adopter do |f| %>
    <%= f.text_field :first_name , :placeholder => "Votre prénom", class:"form-control"%>
    <%= f.text_field :last_name , :placeholder => "Votre nom", class:"form-control"%>
    <%= f.text_area :text , :placeholder => "Votre prénom", class:"form-control text"%>

    <%= f.email_field :email, class:"form-control", :placeholder => "Votre email" %>
    <%= f.submit :value => "Validez",  :class => "btn btn-lg btn-primary btn-block"%>
    <% end %>
  </div>
</div>
